{
  "name": "@trw-masterclass/pace",
  "version": "1.0.0",
  "private": true,
  "author": "xnerhu <xnerhu@gmail.com>",
  "scripts": {
    "run:py": "npm run py ./packages/optimizer/src/main.py",
    "run:py:env": "npm run py:venv ./packages/optimizer/src/main.py",
    "py": "cross-env PYTHONPATH=\"./\" C:/Python39/python.exe",
    "py:venv": "cross-env PYTHONPATH=\"./\" ./.py_venv/Scripts/python.exe",
    "dev": "cargo watch -x run",
    "dev:py": "nodemon --config ./nodemon_python.json",
    "build": "cross-env RUSTFLAGS=\"-C embed-bitcode -C target-cpu=native\" cargo build --release --bin lib",
    "build:py:dev": "maturin build --manifest-path packages/lib/Cargo.toml -o build/lib --interpreter python3.9 && pip3 install build/lib/lib-0.0.1-cp39-none-win_amd64.whl --force-reinstall",
    "maturin:setup": "virtualenv .py_venv",
    "maturin:dev": "cross-env VIRTUAL_ENV=./.py_venv maturin develop --manifest-path ./packages/lib/Cargo.toml",
    "test": "cargo nextest run",
    "test:trace": "cross-env RUST_BACKTRACE=1 yarn test",
    "lint": "cargo fmt --all -- --check && cargo clippy -- -D warnings",
    "lint:fix": "cargo clippy --fix --allow-dirty"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20"
  }
}
